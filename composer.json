{
  "name": "mini_erp/mini_erp",
  "description": "Projeto PHP - mini_erp",
  "type": "project",
  "require": {
    "php": ">=8.0",
    "monolog/monolog": "^3.0",       
    "symfony/http-foundation": "^6.0", 
    "symfony/routing": "^6.0",        
    "doctrine/orm": "^2.14",            
    "vlucas/phpdotenv": "^5.5"          
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0"          
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  }
}
